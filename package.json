    "@technote-space/github-action-log-helper": "^0.1.26"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@technote-space/github-action-test-helper": "^0.7.12",
    "@technote-space/release-github-actions-cli": "^1.8.5",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-circus": "^27.0.4",
    "lint-staged": "^11.0.0",
    "nock": "^13.1.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
